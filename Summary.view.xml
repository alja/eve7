<mvc:View
    controllerName="eve.Summary"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    >   
  <Panel >
    <content>
      <Tree id="tree" itemPress="onItemPressed">
      </Tree>
    </content>
  </Panel>
  <Panel id="productDetailsPanel" headerText="EveElement Editor" class="sapUiResponsiveMargin" >
			<VBox>

<Label text="{event>fName}"   />

      <l:HorizontalLayout class="sapUIContentPadding">
      <CheckBox id="RnrSelf" text="RnrSelf" selected="{path:'event>fRnrSelf', type:'sap.ui.model.type.Boolean' }" select="changeRnrSelf"  enabled="true"/>
      <CheckBox id="RnrChld" text="RnrChildren" selected="{path:'event>fRnrChildren', type:'sap.ui.model.type.Boolean' }" select="changeRnrChld" enabled="false"/>

      </l:HorizontalLayout>
    </VBox>
  </Panel>

</mvc:View>
