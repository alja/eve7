<mvc:View
    controllerName="eve.Summary"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    >   
  <Panel >
    <content>
      <Tree id="tree" itemPress="onItemPressed">
      </Tree>
    </content>
  </Panel>
  <Panel id="productDetailsPanel" headerText="EveElement Editor" class="sapUiResponsiveMargin" >
			<VBox>

      <Input description="Name" value="{event>fName}" change="printEvent"/>
      <Input description="Number Of points" value="{event>fN}" change="printEvent"/>

    </VBox>
  </Panel>

</mvc:View>
