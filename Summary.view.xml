<mvc:View
    controllerName="eve.Summary"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    >   
  <Page showHeader="false" >
    <content>
      <Tree id="tree">
      </Tree>
      <VBox>

	<form:SimpleForm
		width="auto"
		class="sapUiResponsiveMargin"
		layout="ResponsiveGridLayout"
		editable="true"
		labelSpanL="3"
		labelSpanM="3"
		emptySpanL="4"
		emptySpanM="4"
		columnsL="1"
		columnsM="1"
		title="PointSet">
		<form:content>
			<Label text="Number of Points"/>
			<Input value="{path:'/number',
                                      type:'sap.ui.model.type.Integer'}"
                                      change="changeNumPoints"/>
		</form:content>
	</form:SimpleForm>

      </VBox>
    </content>
  </Page>
</mvc:View>
